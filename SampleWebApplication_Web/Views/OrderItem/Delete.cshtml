@model OrderItem

<div class="container">
    <h1 class="text-info">Delete Order</h1>
    <form method="post">
        <div>
            <input asp-for=OrderId disabled class="form-control" />
            <label asp-for=OrderId class="p-0"></label>
        </div>
        <div>
            <input asp-for=ProductId disabled class="form-control" />
            <label asp-for=ProductId class="p-0"></label>
        </div>
        <div>
            <input asp-for=Quantity disabled class="form-control" />
            <label asp-for=Quantity class="p-0"></label>
        </div>
        <div>
            <input asp-for=Price disabled class="form-control" />
            <label asp-for=Price class="p-0"></label>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="OrderItem" asp-action="Index" class="btn btn-outline-primary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </form>
</div>
@model OrderItem
<div class="container">
    <h1 class="text-info">Create Order</h1>
    <form method="post" class="row">
        <div class="p-3 col-12">
            <label asp-for=OrderId></label>
            <input asp-for=OrderId />
            <span asp-validation-for="OrderId" class="text-danger"></span>
        </div>
        <div class="p-3 col-12">
            <label asp-for=ProductId></label>
            <input asp-for=ProductId />
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>
        <div class="p-3 col-12">
            <label asp-for=Quantity></label>
            <input asp-for=Quantity />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="p-3 col-12">
            <label asp-for=Price></label>
            <input asp-for=Price />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-outline-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="OrderItem" asp-action="Index" class="btn btn-outline-primary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </form>
</div>

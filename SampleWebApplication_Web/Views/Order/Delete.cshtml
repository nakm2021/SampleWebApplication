@model Order

<div class="container">
    <h1 class="text-info">Delete Order</h1>
    <form method="post">
        <div>
            <input asp-for=OrderId disabled class="form-control" />
            <label asp-for=OrderId class="p-0"></label>
        </div>
        <div>
            <input asp-for=CustomerId disabled class="form-control" />
            <label asp-for=CustomerId class="p-0"></label>
        </div>
        <div>
            <input asp-for=OrderDate disabled class="form-control" />
            <label asp-for=OrderDate class="p-0"></label>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Order" asp-action="Index" class="btn btn-outline-primary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </form>
</div>